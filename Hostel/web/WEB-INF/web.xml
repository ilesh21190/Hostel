<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Tester</servlet-name>
        <servlet-class>Tester</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginCheck</servlet-name>
        <servlet-class>com.Hostel.LoginCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddStudent</servlet-name>
        <servlet-class>com.Hostel.AddStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteStudent</servlet-name>
        <servlet-class>com.Hostel.DeleteStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PictureCaptureServlet</servlet-name>
        <servlet-class>com.Hostel.PictureCaptureServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPhoto</servlet-name>
        <servlet-class>com.Hostel.ViewPhoto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Tester</servlet-name>
        <url-pattern>/Tester</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginCheck</servlet-name>
        <url-pattern>/LoginCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddStudent</servlet-name>
        <url-pattern>/AddStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteStudent</servlet-name>
        <url-pattern>/DeleteStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PictureCaptureServlet</servlet-name>
        <url-pattern>/PictureCaptureServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPhoto</servlet-name>
        <url-pattern>/ViewPhoto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
